doctype html
html

  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='Template Agency Business', content='Template Agency Business')
    meta(name='Jem Worth', content= "Jem Worth")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Template Travel Agency
    script(src='./js/jquery-1.11.1.min.js')
    script(type='application/x-javascript').
      addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); }
    link(href='./css/bootstrap.css', rel='stylesheet', type='text/css', media='all')
    link(rel='stylesheet', href='./css/style.css', type='text/css', media='all')
    link(href='./css/font-awesome.css', rel='stylesheet')
    link(rel='stylesheet', href='./css/lightbox.css')
    link(href='./css/animate.css', rel='stylesheet', type='text/css', media='all')
    != css()
    .header
      .top-header
        .container
          .top-header-info
            .top-header-left.wow.fadeInLeft.animated(data-wow-delay='.5s')
              p More than 10 new destinations for your trip
            .top-header-right.wow.fadeInRight.animated(data-wow-delay='.5s')
              .top-header-right-info
                ul
                  li
                    a(href='/login') Login
                  li
                    a(href='/signup') Sign up
              .social-icons
                ul
                  li
                    a.twitter(href='#')
                      i.fa.fa-twitter
                  li
                    a.twitter.facebook(href='#')
                      i.fa.fa-facebook
                  li
                    a.twitter.google(href='#')
                      i.fa.fa-google-plus
              .clearfix  
            .clearfix  
      .bottom-header
        .container
          .logo.wow.fadeInDown.animated(data-wow-delay='.5s')
            h1
              a(href='/')
                img(src='./img/logo.jpg', alt='')
          .top-nav.wow.fadeInRight.animated(data-wow-delay='.5s')
            nav.navbar.navbar-default
              .container
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                  | Menu
              // Collect the nav links, forms, and other content for toggling
              #bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav
                  li
                    a.active(href='/') Home
                  li
                    a(href='/about') About
                  li
                    a(href='/codes') Codes
                  li
                    a.dropdown-toggle.hvr-bounce-to-bottom(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                      | Gallery
                      span.caret
                    ul.dropdown-menu
                      li
                        a.hvr-bounce-to-bottom(href='/gallery1') Gallery1
                      li
                        a.hvr-bounce-to-bottom(href='/gallery2') Gallery2
                  li
                    a(href='/blog') Blog
                  li
                    a(href='/contact') Contact
                .clearfix  
