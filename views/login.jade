extends layout

block content
  .login
    .container
      .login-body
        .login-heading
          h1 Login
        .login-info
          form
            input.user(type='text', name='email', placeholder='Email', required='')
            input.lock(type='password', name='password', placeholder='Password')
            .forgot-top-grids
              .forgot-grid
                ul
                  li
                    input#brand1(type='checkbox', value='')
                    label(for='brand1')
                      span
                      | Remember me
              .forgot
                a(href='#') Forgot password?
              .clearfix  
            input(type='submit', name='Sign In', value='Login')
            .signup-text
              a(href='signup.html') Don't have an account? Create one now
            hr
            h2 or login with
            .login-icons
              ul
                li
                  a.facebook(href='#')
                    i.fa.fa-facebook
                li
                  a.twitter(href='#')
                    i.fa.fa-twitter
                li
                  a.google(href='#')
                    i.fa.fa-google-plus
                li
                  a.dribbble(href='#')
                    i.fa.fa-dribbble
